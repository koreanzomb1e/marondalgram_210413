<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.marondalgram.user.dao.UserDAO">
 	<select id="selectUserByLoginId" parameterType="string" resultType="com.marondalgram.user.model.User">
 		SELECT
 			`id`
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 	</select>
 	
 	<insert id="insertUser" parameterType="map">
		INSERT INTO `user`
		(
			`loginId`
			, `password`
			, `name`
			, `email`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{loginId}
			, #{password}
			, #{name}
			, #{email}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectUserByLoginIdAndPassword" parameterType="map" resultType="com.marondalgram.user.model.User">
		SELECT
 			`id`
 			, `loginId`
 			, `name`
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 			AND `password` = #{password}
	</select>
 </mapper>