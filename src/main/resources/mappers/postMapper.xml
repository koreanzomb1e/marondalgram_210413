<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.marondalgram.post.dao.PostDAO">
 	<select id="selectPostList" resultType="com.marondalgram.post.model.Post">
 		SELECT
 			`id`
 			, `userId`
 			, `userName`
 			, `content`
 			, `imagePath`
 		FROM
 			`post`
 	</select>
 	
 	<select id="selectPostById" parameterType="int" resultType="com.marondalgram.post.model.Post">
 		SELECT
 			`id`
 			, `userId`
 			, `userName`
 			, `content`
 			, `imagePath`
 		FROM
 			`post`
 		WHERE
 			`id` = #{postId}
 	</select>
 	
 	<insert id="insertPost" parameterType="map">
 		INSERT INTO `post`
 		(
 			`userId`
 			, `userName`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{userName}
 			, #{content}
 			, #{imagePath}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<delete id="deletePost" parameterType="int">
 		DELETE
 		FROM
 			`post`
 		WHERE
 			`id` = #{postId}
 	</delete>
 </mapper>